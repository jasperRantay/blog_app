<div class container>

    <div class=header>
        <nav class="nav-main">
            <h1 class="logo"><a href="/articles">Blog App</a></h1>
        <nav>
    </div>

    <div class=main>
        <div class="main-header">
            <h1>Articles</h1>
        </div>
        <div class="main-body">

            <h2><%= @article.title %></h2>

            <p><%= @article.body %></p>

            <%= link_to "Edit", edit_article_path(@article) %>
            <%= link_to "Delete", article_path(@article),
             data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to remove this"
             } 
             
            %>

            
        </div>
    </div>

    <div class=footer>
        <h3 style="text-align:center;">First rubby on rails App</h3>
    </div>

</div>