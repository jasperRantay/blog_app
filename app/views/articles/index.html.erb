<div class container>

    <div class=header>
        <nav class="nav-main">
            <h1 class="logo">Blog App</h1>
            <p>Add article</p>
        <nav>
    </div>

    <div class=main>
        <div class="main-header">
            <h1>Articles</h1>
        </div>
        <div class="main-body">
            <div class="card">
                <div class="cards">
                    <% @articles.each do |article| %>
                    <div class=card-header>
                        <%= article.title %>
                    </div>
                    <div class="card=body">
                        <%= article.body %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <div class=footer>
        <h3 style="text-align:center;">First rubby on rails App</h3>
    </div>

</div>